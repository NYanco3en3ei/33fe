{
  "version": 2,
  "builds": [
    {
      "src": "package.json",  // 以 package.json 触发构建流程
      "use": "@vercel/static-build",  // 该构建器会执行 buildCommand
      "config": { "distDir": "dist" }  // 指定 Vite 构建产物目录
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.(json|ico|txt))$", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm run build",
  "outputDirectory": "dist"
}
