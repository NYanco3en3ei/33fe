{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile",  // 关键：添加此参数
  "buildCommand": "pnpm run build"
}
